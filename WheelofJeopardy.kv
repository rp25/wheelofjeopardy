<WheelofJeopardy>:
    mainBox: mainBox

    FloatLayout:
        id: mainBox
        orientation: 'horizontal'
        size: root.width, root.height

        GridLayout:
            orientation: 'horizontal'
            cols:2
            pos_hint: {'top': 1}
            size_hint:  0.5, 0.1


            Button:
                text: 'SPIN!!'
                size_hint: 0.7, 1.0
                on_press: root.changeText(spinResult)

            Label:
                id: spinResult
                text: 'Spin result'
                background_color: 1, 0, 0, 1
                size_hint: 0.3, 1.0
                outline_color: 1, 0, 0


    
