<WheelofJeopardy>:
    mainBox: mainBox
    question: question
    answer: answer

    FloatLayout:
        id: mainBox
        orientation: 'horizontal'
        size: root.width, root.height

        GridLayout:
            orientation: 'vertical'
            cols:1
            pos_hint: {'top': 1, 'right': 1.0}
            size_hint:  1, 0.4

            Button:
                text: 'SPIN!!'
                size_hint: 0.7, 1.0
                on_press: root.changeText(spinResult)

            Label:
                id: spinResult
                text: 'Spin result'
                background_color: 1, 0, 0, 1
                size_hint: 0.3, 1.0
                outline_color: 1, 0, 0

            Label:
                id: question
                text: '??'
                background_color: 1, 0, 0, 0.9
                size_hint: 0.8, 1.0
            
            Button:
                id: showAnswer
                text: "Show Answer"
                size_hint: 0.7, 1.0
                on_press: root.showAnswer(answer)

            TextInput:
                id: answer
                text: '!!'
                size_hint: 0.8, 1.0
                password: True
                halign: 'center'
                background_color: 0, 0, 0, 1
                foreground_color: 1, 1, 1, 1
